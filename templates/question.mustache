{{!
  @template mod_moodleoverflow/question

  Moodleoverflow question template.
  The purpose of this template is to render the starting post of a discussion.

  Example context (json):
  {
  }
}}

{{! Print an anchor if the post is the first unread post of the discussion. }}
{{# isfirstunread}}
    <a id="unread"></a>
{{/ isfirstunread}}

{{! Print the anchor to the post. }}
<a id="p{{ postid }}"></a>

{{! Start the post. Mark it read or unread. }}
<div class="moodleoverflowpost border clearfix{{ postclass }}{{# isfirstpost}} firstpost starter{{/isfirstpost}}" role="region"
     aria-label="{{ discussionby }}">
    {{#showvotes}}
        <div class="votecell">
            <div class="votes">
                {{> mod_moodleoverflow/postvoting }}
            </div>
        </div>
    {{/showvotes}}
    {{^showvotes}}
        <div class="novotecell"></div>
    {{/showvotes}}
    <div class="answercell">
        <div class="post-text">
            {{{ postcontent }}}
        </div>
        <div class="attachments">
            {{#attachments}}
                {{#image}}
                    <img src="{{filepath}}" alt=""/>
                    <br>
                {{/image}}
                {{^image}}
                    <a href="{{filepath}}">
                        {{{icon}}}
                    </a>
                    <a href="{{filepath}}">
                        {{filename}}
                    </a>
                {{/image}}
                <br>
            {{/attachments}}
        </div>
        <div class="post-info">
            <div class="leftbox questioner">
                <div class="user-info">
                    {{# picture }}
                    <div class="user-avatar">
                        {{{ picture }}}
                    </div>
                    {{/picture}}
                    <div class="user-details">
                        {{{ byname }}} {{#showreputation}}{{#showrating}}({{#pix}}star, moodleoverflow, {{#str}}reputation, moodleoverflow{{/str}}{{/pix}}<span>{{ byrating }}</span>){{/showrating}}{{/showreputation}}
                        <div class="user-action-time">
                            {{ bydate }}
                        </div>
                        <div class="user-action-shorttime">
                            {{byshortdate}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="rightbox">
                <div class="post-menu">
                    {{{ commands }}}
                </div>
            </div>
        </div>
    </div>
    {{! Print the footer if requested. }}
    {{# footer }}
        <div class="footer">
            {{ footer }}
        </div>
    {{/footer}}
</div>
